<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">
<servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>com.itu.prom16.FrontController</servlet-class>
        <init-param>
            <param-name>controller-package</param-name>
            <param-value>com.itu.prom16.controller</param-value> <!-- Package où se trouvent les contrôleurs -->
        </init-param>
        <load-on-startup>1</load-on-startup>
</servlet>
<servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/</url-pattern>
</servlet-mapping>

         <servlet>
        <servlet-name>FirstController</servlet-name>
        <servlet-class>com.itu.prom16.controller.FirstController</servlet-class>
        <init-param>
            <param-name>FirstController</param-name>
            <param-value>hello_1</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirstController</servlet-name>
        <url-pattern>/FirstController/*</url-pattern>
    </servlet-mapping>

</web-app>